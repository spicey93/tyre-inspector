<!-- views/partials/inspections/mobileCard.ejs -->
<% const created = new Date(i.createdAt); %>
<% const createdUKDate = created.toLocaleDateString('en-GB'); %>
<% const createdUKTime = created.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }); %>

<article class="relative overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
  <div class="p-3">
    <div class="flex items-start justify-between gap-3">
      <div class="min-w-0">
        <div class="truncate text-xl font-extrabold tracking-tight text-slate-900"><%= i.vrm %></div>
        <div class="mt-1 inline-flex items-center gap-1 rounded-md bg-slate-100 px-2 py-0.5">
          <span class="text-[10px] font-semibold text-slate-600 uppercase">Code</span>
          <span class="font-mono text-xs font-bold text-slate-800"><%= i.code %></span>
        </div>
      </div>
      <div class="shrink-0 text-right text-xs text-slate-500">
        <div class="flex items-center gap-1 justify-end">
          <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/></svg>
          <span><%= createdUKDate %></span>
        </div>
        <div class="mt-0.5"><%= createdUKTime %></div>
      </div>
    </div>

    <div class="mt-3 grid grid-cols-2 gap-2">
      <div class="rounded-lg bg-slate-50 border border-slate-200 px-2.5 py-2">
        <div class="text-[11px] leading-none text-slate-500">Mileage</div>
        <div class="text-sm font-medium text-slate-900"><%= typeof i.mileage === 'number' ? i.mileage : 'â€”' %></div>
      </div>
      <div class="rounded-lg bg-slate-50 border border-slate-200 px-2.5 py-2">
        <div class="text-[11px] leading-none text-slate-500">Share code</div>
        <div class="font-mono text-sm font-semibold text-slate-900"><%= i.code %></div>
      </div>
    </div>

    <div class="mt-3 flex items-center justify-between">
      <a href="/inspections?code=<%= i.code %>"
         class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-3 py-2 text-white text-sm font-semibold hover:bg-sky-700">
        Open
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M5 12h13m-6-7l7 7-7 7"/></svg>
      </a>

      <div class="inline-flex items-center gap-2">
        <% if (user && user.role === 'admin') { %>
          <a href="/inspections/<%= i._id %>/edit"
             class="inline-flex items-center gap-1 rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-700 text-sm hover:bg-slate-50">
            Edit
          </a>
        <% } %>
        <button
          type="button"
          class="inline-flex items-center gap-1 rounded-lg border border-rose-300 bg-rose-50 px-3 py-2 text-rose-700 text-sm hover:bg-rose-100"
          hx-delete="/inspections/<%= i._id %>"
          hx-target="closest article"
          hx-swap="outerHTML"
          hx-confirm="Delete inspection <%= i.code %>? This cannot be undone.">
          Delete
          <svg class="htmx-indicator hidden ml-2 w-4 h-4 animate-spin" viewBox="0 0 24 24" fill="none">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4A4 4 0 004 12z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</article>
