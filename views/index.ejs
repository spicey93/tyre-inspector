<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tyre Inspector</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons (optional) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- HTMX -->
    <script
      src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.6/dist/htmx.min.js"
      integrity="sha384-Akqfrbj/HpNVo8k11SXBb6TlBWmXXlYQrCSqEWmyKJe+hDm3Z/B2WVG4smwBkRVm"
      crossorigin="anonymous"
    ></script>

    <style>
      /* Subtle page polish */
      body {
        background:
          radial-gradient(1000px 400px at 10% -10%, rgba(63, 135, 245, 0.08), transparent 60%),
          radial-gradient(900px 300px at 110% -20%, rgba(63, 135, 245, 0.06), transparent 60%),
          #f8fafc;
      }
      .hero {
        padding: 6rem 0 2rem;
      }
      .plate {
        font-weight: 700;
        letter-spacing: 0.08em;
        border-radius: 8px;
        background: linear-gradient(90deg, #ffeb3b 0 70%, #1e88e5 70% 100%);
        color: #000;
        display: inline-block;
        padding: .35rem .75rem;
      }
      .plate small {
        color: #fff;
        font-weight: 600;
        letter-spacing: 0;
        margin-left: .5rem;
      }
      .card-soft {
        border: 1px solid rgba(0,0,0,.05);
        box-shadow: 0 6px 24px rgba(0,0,0,.06);
        border-radius: 1rem;
      }
      .htmx-indicator {
        display: none;
      }
      .htmx-request .htmx-indicator,
      .htmx-request.htmx-indicator {
        display: inline-block;
      }
      .form-text-muted {
        color: #6c757d;
      }
      .divider {
        height: 1px; background: linear-gradient(to right, transparent, rgba(0,0,0,.1), transparent);
      }
    </style>
  </head>

  <body>
    <!-- Top Nav -->
    <nav class="navbar navbar-expand-md bg-white border-bottom sticky-top">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="/">
          <i class="bi bi-speedometer2 me-1"></i> Tyre Inspector
        </a>
        <div class="ms-auto d-flex align-items-center gap-2">
          <a href="#create" class="btn btn-primary btn-sm">Create Inspection</a>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <header class="hero text-center">
      <div class="container">
        <span class="plate">NU59 WEP <small>UK</small></span>
        <h1 class="display-5 fw-bold mt-3">Create, share, and view tyre inspections.</h1>
        <p class="lead text-muted mx-auto" style="max-width: 680px;">
          Create, share, and view tyre inspections.
        </p>
        <div class="mt-3">
          <button
            type="button"
            class="btn btn-primary btn-lg"
            data-bs-toggle="modal"
            data-bs-target="#vrmModal"
            id="create"
          >
            <i class="bi bi-plus-lg me-1"></i> Create Inspection
          </button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container pb-5">
      <div class="row g-4">
        <!-- Create card -->
        <div class="col-lg-6">
          <div class="card card-soft">
            <div class="card-body p-4">
              <h5 class="card-title mb-2"><i class="bi bi-search me-2"></i>Start a new inspection</h5>
              <p class="text-muted mb-3">Enter a UK VRM to fetch manufacturer tyre recommendations.</p>
              <button
                type="button"
                class="btn btn-outline-primary"
                data-bs-toggle="modal"
                data-bs-target="#vrmModal"
              >
                Look up VRM
              </button>
            </div>
          </div>
        </div>

        <!-- View card -->
        <div class="col-lg-6">
          <div class="card card-soft">
            <div class="card-body p-4">
              <h5 class="card-title mb-2"><i class="bi bi-file-earmark-text me-2"></i>Open an inspection</h5>
              <p class="text-muted mb-3">Have a code already? Jump straight back in.</p>
              <form action="/inspections" method="get" class="row gy-2 gx-2 align-items-center">
                <div class="col-8">
                  <label class="visually-hidden" for="code">Inspection code</label>
                  <input
                    id="code"
                    name="code"
                    type="text"
                    class="form-control"
                    placeholder="Enter code"
                    autocomplete="off"
                  />
                </div>
                <div class="col-4 d-grid">
                  <button class="btn btn-primary">Go</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="my-5 divider"></div>

      <p class="text-center small text-muted">
        Tip: If the suggested tyre sizes don’t match the vehicle, choose <em>None of the above</em> and you can enter sizes manually on the next step.
      </p>
    </main>

    <!-- VRM Modal -->
    <div class="modal fade" id="vrmModal" tabindex="-1" aria-labelledby="vrmModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="vrmModalLabel">Confirm vehicle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <!-- Use hx-post to hit /vrm; render radio list + “None of the above” -->
          <form
            class="modal-body"
            hx-post="/vrm"
            hx-target="#vrmResult"
            hx-swap="innerHTML"
          >
            <div class="mb-2">
              <label for="vrmInput" class="form-label">Vehicle registration (VRM)</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-car-front"></i></span>
                <input
                  id="vrmInput"
                  type="text"
                  class="form-control text-uppercase"
                  name="vrm"
                  placeholder="e.g. NU59 WEP"
                  autocomplete="off"
                  required
                  pattern="[A-Z0-9\s]{1,10}"
                />
                <button class="btn btn-primary" type="submit">
                  <span class="htmx-indicator spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                  Look up
                </button>
              </div>
              <div class="form-text form-text-muted">We’ll fetch tyre sizes and pressures for this vehicle.</div>
            </div>

            <div id="vrmResult" class="mt-3">
              <!-- Results from /vrm will be injected here -->
            </div>

            <div id="vrmError" class="alert alert-danger d-none mt-3" role="alert"></div>
          </form>

          <div class="modal-footer">
            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>

    <!-- Small UX helpers -->
    <script>
      // Auto-focus VRM field when modal opens
      const vrmModal = document.getElementById("vrmModal");
      vrmModal?.addEventListener("shown.bs.modal", () => {
        document.getElementById("vrmInput")?.focus();
      });

      // Uppercase as you type (keeps caret position)
      const vrmInput = document.getElementById("vrmInput");
      vrmInput?.addEventListener("input", (e) => {
        const { selectionStart, selectionEnd } = e.target;
        e.target.value = e.target.value.toUpperCase();
        e.target.setSelectionRange(selectionStart, selectionEnd);
      });

      // HTMX error hook to show a friendly message
      document.body.addEventListener("htmx:responseError", function (evt) {
        const el = document.getElementById("vrmError");
        if (!el) return;
        el.classList.remove("d-none");
        el.textContent = "We couldn’t fetch data right now. Please check the VRM and try again.";
      });
    </script>
  </body>
</html>
