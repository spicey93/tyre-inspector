<!-- views/inspections/created.ejs -->
<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Inspection Created</title>
  <!-- Tailwind (CDN) -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full">
  <main class="mx-auto max-w-2xl px-4 py-10">
    <!-- Top link -->
    <a href="/" class="inline-flex items-center gap-2 text-slate-600 hover:text-slate-800 mb-6">
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M15 19l-7-7 7-7"/></svg>
      Home
    </a>

    <!-- Header -->
    <header class="mb-4">
      <h1 class="text-2xl font-semibold text-slate-900">Inspection created</h1>
      <p class="mt-1 text-slate-600">VRM <span class="font-semibold text-slate-800"><%= vrm %></span></p>
    </header>

    <!-- Success card -->
    <section class="rounded-2xl border border-emerald-200 bg-white shadow-sm">
      <div class="flex items-start gap-4 p-5 sm:p-6">
        <!-- Icon -->
        <div class="mt-1 inline-flex h-10 w-10 items-center justify-center rounded-full bg-emerald-50 ring-1 ring-emerald-100">
          <svg class="h-6 w-6 text-emerald-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 12l2 2 4-4M7.5 4.21a9 9 0 1011.29 11.29A9 9 0 007.5 4.21z"/>
          </svg>
        </div>

        <!-- Content -->
        <div class="flex-1">
          <p class="text-sm uppercase tracking-wide text-emerald-700">Share/report code</p>
          <div class="mt-1 inline-flex items-center gap-3">
            <span class="rounded-md bg-slate-100 px-3 py-1.5 font-mono text-2xl font-black tracking-[0.15em] text-slate-900">
              <%= code %>
            </span>
          </div>

          <!-- Actions -->
          <div class="mt-4 flex flex-col gap-2 sm:flex-row sm:items-center">
            <button id="copyBtn"
                    class="inline-flex items-center justify-center gap-2 rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-800 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-sky-400">
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 1H4a2 2 0 00-2 2v12h2V3h12V1zm3 4H8a2 2 0 00-2 2v14a2 2 0 002 2h11a2 2 0 002-2V7a2 2 0 00-2-2zm0 16H8V7h11v14z"/>
              </svg>
              Copy code
            </button>

            <a href="/inspections?code=<%= code %>"
               class="inline-flex items-center justify-center gap-2 rounded-lg bg-emerald-600 px-4 py-2 font-medium text-white hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-400">
              <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M5 12h13m-6-7l7 7-7 7"/></svg>
              Open report
            </a>
          </div>

          <!-- Tip -->
          <p class="mt-3 text-sm text-slate-500">
            Tip: write this code on the job card so anyone can open the report quickly.
          </p>
        </div>
      </div>
    </section>

  </main>

  <script>
    const btn = document.getElementById('copyBtn');
    btn?.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText('<%= code %>');
        const original = btn.textContent;
        btn.textContent = 'Copied!';
        btn.classList.remove('border-slate-300');
        btn.classList.add('border-emerald-300','bg-emerald-50','text-emerald-800');
        setTimeout(() => {
          btn.textContent = original;
          btn.classList.add('border-slate-300');
          btn.classList.remove('border-emerald-300','bg-emerald-50','text-emerald-800');
        }, 1400);
      } catch {
        alert('Copy failed, please copy manually: <%= code %>');
      }
    });
  </script>
</body>
</html>
