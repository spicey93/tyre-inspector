<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50">
  <head>
    <%- include('../partials/head') %>
    <script src="/js/inspection-form.js" defer></script>
  </head>
  <body class="h-full">
    <%- include('../partials/header-mobile') %>

    <div class="md:pl-64">
      <%- include('../partials/sidebar', { active: 'inspections', user }) %>

      <main class="max-w-5xl mx-auto px-4 md:px-8 py-6 space-y-6">
        <header class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-3">
          <div>
            <h1 class="text-2xl md:text-3xl font-extrabold text-slate-900">New Inspection</h1>
            <p class="text-slate-600 mt-1">VRM <span class="font-semibold"><%= (vehicle?.vrm || '').toUpperCase() %></span></p>
          </div>
          <a href="/inspections" class="inline-flex items-center gap-2 rounded-xl border border-slate-300 bg-white px-4 py-2.5 font-semibold text-slate-800 hover:bg-slate-50">
            Back to Inspections
          </a>
        </header>

        <!-- Vehicle summary -->
        <section class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
            <div>
              <div class="text-slate-500">Make / Model</div>
              <div class="font-medium text-slate-900"><%= vehicle?.make || '—' %> <%= vehicle?.model || '' %></div>
            </div>
            <div>
              <div class="text-slate-500">Year</div>
              <div class="font-medium text-slate-900"><%= vehicle?.year || '—' %></div>
            </div>
            <div>
              <div class="text-slate-500">Fuel</div>
              <div class="font-medium text-slate-900"><%= vehicle?.fuel || '—' %></div>
            </div>
            <div>
              <div class="text-slate-500">Tyre sizes (last known)</div>
              <div class="font-medium text-slate-900"><%= (defaults?.frontSize || '—') %> (front) · <%= (defaults?.rearSize || '—') %> (rear)</div>
            </div>
          </div>
        </section>

        <form method="POST" action="/inspections" class="space-y-6">
          <input type="hidden" name="vrm" value="<%= (vehicle?.vrm || '').toUpperCase() %>">

          <section class="rounded-2xl border border-slate-200 bg-white p-4 space-y-3">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
              <div>
                <label class="block text-sm font-medium text-slate-700" for="mileage">Mileage</label>
                <input id="mileage" name="mileage" inputmode="numeric" value="<%= mileage || '' %>"
                       class="mt-1 w-full rounded-lg border border-slate-300 px-3 py-2" placeholder="e.g. 45210" />
              </div>
              <div class="sm:col-span-2">
                <label class="block text-sm font-medium text-slate-700" for="notes">Overall notes</label>
                <input id="notes" name="notes" class="mt-1 w-full rounded-lg border border-slate-300 px-3 py-2" placeholder="Optional" />
              </div>
            </div>
          </section>

          <!-- Tyre groups -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <%- include('../partials/forms/tyrePosition', {
              prefix: 'offside.front',
              title: 'Offside Front',
              idBase: 'offside-front',
              sizeDefault: (defaults?.frontSize || ''),
              pressureDefault: (defaults?.pressures?.front),
              brandOptions
            }) %>

            <%- include('../partials/forms/tyrePosition', {
              prefix: 'offside.rear',
              title: 'Offside Rear',
              idBase: 'offside-rear',
              sizeDefault: (defaults?.rearSize || ''),
              pressureDefault: (defaults?.pressures?.rear),
              brandOptions
            }) %>

            <%- include('../partials/forms/tyrePosition', {
              prefix: 'nearside.front',
              title: 'Nearside Front',
              idBase: 'nearside-front',
              sizeDefault: (defaults?.frontSize || ''),
              pressureDefault: (defaults?.pressures?.front),
              brandOptions
            }) %>

            <%- include('../partials/forms/tyrePosition', {
              prefix: 'nearside.rear',
              title: 'Nearside Rear',
              idBase: 'nearside-rear',
              sizeDefault: (defaults?.rearSize || ''),
              pressureDefault: (defaults?.pressures?.rear),
              brandOptions
            }) %>
          </div>

          <div class="flex items-center justify-end gap-2">
            <a href="/inspections" class="inline-flex items-center rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-700 hover:bg-slate-50">Cancel</a>
            <button class="inline-flex items-center rounded-lg bg-sky-600 hover:bg-sky-700 text-white px-4 py-2 font-semibold">Save inspection</button>
          </div>
        </form>
      </main>
    </div>

    <%- include('../partials/bottom-nav', { active: 'inspections', user }) %>
  </body>
</html>
